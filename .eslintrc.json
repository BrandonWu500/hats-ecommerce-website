{
  "extends": ["next", "next/core-web-vitals", "eslint:recommended", "prettier"],
  "plugins": ["unicorn"],
  "globals": {
    "React": "readonly"
  },
  "rules": {
    "no-unused-vars": [
      "error",
      {
        "args": "after-used",
        "caughtErrors": "none",
        "ignoreRestSiblings": true,
        "vars": "all"
      }
    ],
    "prefer-const": "error",
    "react-hooks/exhaustive-deps": "error",
    "unicorn/filename-case": [
      "error",
      {
        "case": "kebabCase"
      }
    ]
  }
}
